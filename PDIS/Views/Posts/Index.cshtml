@model IEnumerable<PDIS.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4 font-text">All Posts</h1>
</div>

<p>
    <a class="btn btn-outline-dark" asp-action="Create"><i class="fa fa-paper-plane"></i> Add New Post</a>
</p>
<hr />
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-4 mb-3">
        <div class="card-body shadow border border-dark col-md-12 mb-2">
            <h4 class="card-title">@item.PostName</h4>
            <p class="card-text">$ @item.Salary per month</p>
            <p class="card-text"> @item.PostEmployees.Count() Employees</p>
            <div class="row">
                <div class="col-md-6">
                    <a asp-action="Edit" class="btn btn-outline-dark btn-block" asp-route-id="@item.PostID"><i class="fa fa-edit"></i> Edit</a>
                </div>
                <div class="col-md-6">
                    <a asp-action="Delete" class="btn btn-block btn-outline-dark" asp-route-id="@item.PostID"><i class="fa fa-trash"></i> Delete</a>
                </div>
            </div>
        </div>
    </div>
    }
</div>
