@model PDIS.Models.Salary

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1 class="display-4 font-text">Generate Employee Salary</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeID" class="control-label"></label>
                <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="SalaryMonth" class="control-label"></label>
                <select asp-for="SalaryMonth" class="form-control" asp-items="ViewBag.MonthNames"></select>
            </div>
            <div class="form-group">
                <label asp-for="SalaryYear" class="control-label"></label>
                <select asp-for="SalaryYear" class="form-control" asp-items="ViewBag.Years"></select>
            </div>
            <div class="form-group">
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-block btn-outline-dark"><i class="fa fa-paper-plane"></i> Generate Employee Salary</button>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
